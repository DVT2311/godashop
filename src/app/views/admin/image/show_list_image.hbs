<div id="content-wrapper">
    <div class="container-fluid">
        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="#">Quản lý</a>
            </li>
            <li class="breadcrumb-item active">Hình ảnh</li>
        </ol>
        <!-- DataTables Example -->
        <div class="action-bar">

            <input type="submit" class="btn btn-danger btn-sm" value="Xóa" name="delete">
        </div>
        <div class="card mb-3">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th><input type="checkbox" onclick="checkAll(this)"></th>
                                <th>Hình ảnh</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each data}}
                            <tr>
                                <td><input type="checkbox"></td>
                                <td><img src="/admin/images/{{name}}"></td>
                                <td>
                                    <a href="/admin/image/delete_image?id={{id}}" onclick="Delete('25');"
                                        class="btn btn-danger btn-sm">Xóa</a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
        <form action="/admin/image/post_image" enctype="multipart/form-data" method="POST">
            <div class="row">
                <div class="col-md-12">
                    <label>Upload hình</label>
                </div>
            </div>

            <div class="row form-group">
                <div class="col-md-6">
                    <input type="file" name="image" id="image" class="form-control">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-12 control-label" for="product_id">Danh mục </label>
                <div class="col-md-9 col-lg-6">
                    <select name="product_id" id="product_id" class="form-control">
                        {{#each data_product}}
                        <option value="{{this.id}}">{{this.name}}</option>
                        {{/each}}
                    </select>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-12">
                    <input type="submit" value="Upload" class="btn btn-primary btn-sm">
                </div>
            </div>
        </form>
    </div>
    <!-- /.container-fluid -->