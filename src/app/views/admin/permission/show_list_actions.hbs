<div id="content-wrapper">
    <div class="container-fluid">
        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="#">Quản lý</a>
            </li>
            <li class="breadcrumb-item active">Tác vụ</li>
        </ol>
        <!-- DataTables Example -->
        <div class="action-bar">
            <a href="/admin/permission/add_action" class="btn btn-primary btn-sm">Thêm</a>
        </div>
        <div class="card mb-3">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th># </th>
                                <th>Mã </th>
                                <th>Tên</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each data}}
                            <tr>
                                <td>{{this.id}}</td>
                                <td>{{this.name}}</td>
                                <td>{{this.description}}</td>
                                <td>
                                    <a href="/admin/permission/edit_action?id={{this.id}}" onclick="Edit('1');"
                                        class="btn btn-warning btn-sm">Sửa</a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->